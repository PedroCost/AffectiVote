<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backgorund_main"
    tools:context="affecti.affectivote.MainActivity">

    <TextView
        android:id="@+id/textView_valor"
        android:layout_width="210dp"
        android:layout_height="71dp"
        android:max="100"
        android:text="0"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="92dp" />

    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/imageView_coracaoNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/heart_normal"
        android:src="@mipmap/heart_normal"
        android:visibility="invisible"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="66dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_valor"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/imageView_coracaoRapido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="39dp"
        android:background="@mipmap/heart_fast2"
        android:src="@mipmap/heart_fast2"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_valor"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/imageView_coracaoLento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="66dp"
        android:background="@mipmap/heart_slow"
        android:src="@mipmap/heart_slow"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_valor"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

</android.support.constraint.ConstraintLayout>
